Bootstrap: docker
From: nvidia/cuda:12.4.1-cudnn-devel-ubuntu22.04

%post
	# Downloads the latest package lists (important).
	apt-get update -y

	# Install python and other tools
	# Non-interactive is used to ensure prompts are omitted.
	DEBIAN_FRONTEND=noninteractive apt-get install -y --no-install-recommends \
	python3-dev \
	python3-tk \
	python3-pip \
	python3-setuptools \
	systemd \
	git \
	imagemagick \
	curl \
	openslide-tools
	
	# Install nodejs
	curl -fsSL https://deb.nodesource.com/setup_22.x | bash - 
	apt-get install -y nodejs

	# Reduce image size
	rm -rf /var/lib/apt/lists/*

	# Update pip
	python3 -m pip install --upgrade pip==24.0

	# Install python libraries
	python3 -m pip install wheel
	python3 -m pip install torch torchvision numpy matplotlib torchsummary tensorboardX tensorboard einops
  
  git clone https://github.com/arkiven4/NXSCough
  cd NXSCough
  python3 -m pip install -r requirements.txt

